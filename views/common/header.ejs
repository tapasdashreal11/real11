<header>
    <nav class="navbar navbar-default">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6">
                <a href="/">
                    <img class="header-logo" id="logo" src='/images/<%- locals.logo %>' alt="<%- locals.appName %>">
                </a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="inline-flex-block pull-right form-group">
                    <input type="hidden" id="userId" value="<%=locals.userId%>" />
                    <% if (locals.currentUser) { %>
                        <input type="hidden" id="is-logged-in" value="<%=locals.userId%>" />
                    <% } %>
                    <a href="/users/dashboard">
                        <% if (locals.currentUser) { %>
                        Dashboard
                        <% } else { %>
                        Log In
                        <% } %>
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </a>
                    <% if (locals.currentUser) { %>
                        <a class="logout-btn" href="/users/logout">Logout</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>