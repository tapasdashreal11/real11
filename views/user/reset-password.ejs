<%- include ie-check %>
<%- include('../common/head', {title: 'Reset Your Password?', description: 'Forgot Your Password?  No worries!e',}) 
%>
<%- include('../common/heading-banner') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4 col-lg-6 col-lg-offset-3">
      <div class="header"><h3>Reset Password</h3></div>
      <%- include('../common/alert-message.ejs', {error: locals.error, notice: locals.notice}); %>
      <form method="post" role="form" action="/api/v1/reset-password" class="registration-form form-horizontal sp-form">
        <input name="token" type="hidden" value="<%=token%>">
        <div form-group="true" class="form-group group-password">
          <label class="col-sm-4">Password</label>
          <div class="col-sm-8">
            <input placeholder="Password" name="password" id="password" required="true" type="password" class="form-control">
          </div>
        </div>
        <div form-group="true" class="form-group group-password">
          <label class="col-sm-4">Password Confirmation</label>
          <div class="col-sm-8">
            <input placeholder="Confirm" name="password_confirmation" data-rule-equalTo="#password" required="true" type="password" class="form-control">
          </div>
        </div>
        <button type="submit" class="btn btn-register btn-sp-green">Reset Password</button>
      </form>
      <!-- <a href="/users/login" class="to-login">Back to Log In</a> -->
    </div>
  </div>
</div>
<footer id="footer">
    <% include ../common/footer %>
</footer>
<%- include('../common/foot', {
    scripts: []
}) %>

