<!-- rendered in user-controller.js under the method 'showPasswordChangeForm' -->
<%- include ie-check %>
<%- include('../common/head', {title: 'Change Password', description: 'Change your password please.',}) %>
<%- include('../common/heading-banner') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4 col-lg-6 col-lg-offset-3">
      <div class="header">
        <h3>Change Password</h3>
      </div>
      <%- include('../common/alert-message.ejs', {error: locals.error, notice: locals.notice}); %>
      <form method="post" role="form" action="/users/password/change" class="registration-form form-horizontal sp-form">
        <input type="hidden" name="userId" value="<%= locals.userId %>">
        <div class="form-group group-password"><label class="col-sm-5">Current Password</label>
          <div class="col-sm-8">
            <input placeholder="Current Password" required type="password" name="oldPassword" class="form-control">
          </div>
        </div>
        <div class="form-group group-password"><label class="col-sm-5">Password</label>
          <div class="col-sm-8">
            <input placeholder="New Password" required type="password" name="newPassword" class="form-control">
          </div>
        </div>
        <div class="form-group group-password"><label class="col-sm-5">Confirm Password</label>
          <div class="col-sm-8">
            <input placeholder="Confirm New Password" required type="password" name="passwordConfirmation"
              class="form-control">
          </div>
        </div>
        <button type="submit" class="btn btn-register btn-sp-green">Change Password</button>
      </form>
    </div>
  </div>
</div>
<% include ../common/footer %>
<%- include('../common/foot') %>